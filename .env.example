# Performance Configuration
MAX_IMAGE_DIMENSION=4096
COMPRESSION_QUALITY=85
WORKER_POOL_SIZE=4

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_PORT=3000
API_BASE_URL=http://localhost:8000

# Docker Configuration
COMPOSE_PROJECT_NAME=image2svg
